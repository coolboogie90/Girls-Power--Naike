<%- include('partials/header'); -%>


    <h1>DASHBOARD</h1>

    
    <h2>Welcome <%= user.firstName %> <%= user.lastName %></h2>
    <a href="/profile">My profile</a></p>
    <hr>
    <div>
        <a href="/create">Create a new offer</a></p>
        <br>
        <% if (offers.length) { %>
            <div>
                <h3>My Offers</h3>
                <% offers.forEach((offer) => { %>
                <div>
                    <p><%= offer.offerStatus %></p>
                    <h4><%= offer.jobTitle %></h4>
                    <p><%= offer.employerName %></p>
                    <a href="/offers/<%= offer._id %>">See More</a>
                </div>
              <% }); %>
            </div>
            <hr>         
          <% } else { %>
            <p>No offer found.</p>
          <% } %>
    </div>
    <hr>


    <a href="/logout">Log out</a></p>


    <%- include('partials/footer'); -%>